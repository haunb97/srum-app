{
  "name": "demo-scrum-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.2.0",
    "@hookform/resolvers": "^3.3.4",
    "@reduxjs/toolkit": "^1.9.7",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/react-redux": "^7.1.30",
    "postcss-safe-parser": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.0",
    "react-redux": "^8.1.3",
    "react-scripts": "^5.0.1",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "scripts": {
    "dev": "craco start",
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test:ci": "cross-env CI=true craco test --watchAll=false --passWithNoTests",
    "eject": "craco eject",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "lf"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "postcss": "^8.4.32",
    "prettier": "^2.8.0",
    "tailwindcss": "^3.4.1"
  },
  "resolutions": {
    "minimatch": "^5.1.6"
  }
}
